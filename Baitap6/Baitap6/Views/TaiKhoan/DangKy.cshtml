﻿
@{
    ViewData["Title"] = "DangKy";
}

@model TaiKhoanViewModel

<div class="container">
    <h3>Đăng ký</h3>
    <form method="post">
        <label asp-for="Username">Username: </label>
        <input asp-for="Username" type="text" class="form-control" />

        <label asp-for="Password">Password: </label>
        <input asp-for="Password" type="text" class="form-control" />

        <button type="submit" class="btn btn-primary">Đăng ký</button>
        @if (Model!=null){
            <p>UserName Da nhap la : @Model.Username</p>
            <p>PassWord Sau ma hoa la  : @Model.Password</p>
        }
    </form>
</div>