@model BaiKiemTra03_01.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department ID
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentId
        </dd>
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentName
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DepartmentId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<div>
    <a href="@Url.Action("Index", "Department")">Back to List</a>
</div>
