@model IEnumerable<BaiKiemTra03_01.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.Position</td>
                <td>@employee.Department.DepartmentName</td>
                <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Details", "Employee", new { area = "Admin", id = employee.EmployeeId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Employee", new { area = "Admin", id = employee.EmployeeId })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Employee", new { area = "Admin", id = employee.EmployeeId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Create", "Employee", new { area = "Admin" })" class="btn btn-success">Create New Employee</a>
</div>
